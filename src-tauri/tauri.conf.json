{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CancerReg",
  "version": "0.1.0",
  "identifier": "org.cancerreg.drmyothiha",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CancerReg",
        "width": 1250,
        "height": 730,
        "resizable": true,
        "decorations": false,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window-controls",
          "description": "Allows controlling window (minimize, maximize, close)",
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-toggle-maximize"
          ],
          "windows": ["main"],
          "local": true
        },
        {
          "identifier": "sql-access",
          "description": "Allows SQL plugin to load and query sqlite database",
          "permissions": [
            "sql:default",
            "sql:allow-load",
			"sql:allow-execute"  
          ],
          "windows": ["main"],
          "local": true
        }
      ]
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:all.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "assets/all.db"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
